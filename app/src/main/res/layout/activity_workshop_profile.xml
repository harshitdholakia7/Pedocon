<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Workshop_profile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/mainColor">
        <include layout="@layout/workshop_profile_toolbar"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_13sdp"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_circle_background_color="@color/mainColor"
            android:layout_marginLeft="@dimen/_6sdp"
            android:src="@drawable/ic_user_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parth jadav"
                android:textStyle="normal"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silverwing Techologies Pvt.Ltd."
                android:textStyle="normal"
                android:textSize="@dimen/_16ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Developer"
                android:textStyle="normal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_60sdp">
            <ImageView
                android:id="@+id/workshopgoing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_tick"
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Going"
                android:textSize="@dimen/_15ssp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_32sdp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            <ImageView
                android:id="@+id/workshopshare"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_share"
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="@dimen/_15ssp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_32sdp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speech Time Slot"
                android:textSize="@dimen/_16ssp"
                android:textStyle="normal"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:00 AM to 09:00 AM"
                android:textStyle="normal"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Speaker"
            android:textSize="@dimen/_16ssp"
            android:textStyle="normal"
            android:padding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 Member For Networking"
                android:textStyle="normal"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_group"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>