            android:layout_height="wrap_content"
            android:text="Lunch"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/mainColor"
            android:textColor="@color/black"/>

